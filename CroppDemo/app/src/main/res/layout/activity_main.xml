<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_pic_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_pic_edit"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@mipmap/icon_picture_edit"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_pic_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:text="图片编辑全功能"/>

        <TextView
            android:id="@+id/tv_pic_edit_detail1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:text="(图片编辑全部功能，包括马赛克,"/>
        <TextView
            android:id="@+id/tv_pic_edit_detail2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:text="缩放，自由式裁剪等)"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_pic_crop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_pic_crop"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@mipmap/icon_picture_cropp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_pic_crop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:text="固定比例裁剪"/>

        <TextView
            android:id="@+id/tv_pic_crop_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:text="(单独裁剪功能，固定比例裁剪，非自由式)"/>
    </LinearLayout>


</LinearLayout>